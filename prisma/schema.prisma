datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Transaction {
  id          Int      @id @default(autoincrement())
  type        String
  amount      Float
  currency    String   @default("NGN")
  category    String
  description String?
  source      String   @default("text")
  rawImageUrl String?
  createdAt   DateTime @default(now())
}

model Budget {
  id       Int    @id @default(autoincrement())
  category String
  amount   Float
  month    String

  @@unique([category, month])
}
