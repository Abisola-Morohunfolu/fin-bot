datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Transaction {
  id          Int      @id @default(autoincrement())
  type        String
  amount      Float
  currency    String   @default("NGN")
  categoryId  Int
  category    Category @relation(fields: [categoryId], references: [id])
  description String?
  source      String   @default("text")
  rawImageUrl String?
  createdAt   DateTime @default(now())
}

model Budget {
  id         Int      @id @default(autoincrement())
  categoryId Int
  category   Category @relation(fields: [categoryId], references: [id])
  amount     Float
  month      String

  @@unique([categoryId, month])
}

model Category {
  id           Int           @id @default(autoincrement())
  name         String        @unique
  slug         String        @unique
  isDefault    Boolean       @default(false)
  ownerPhone   String?
  createdAt    DateTime      @default(now())
  transactions Transaction[]
  budgets      Budget[]
}
